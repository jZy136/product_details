@model IEnumerable<product_details.p_dt>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
@using (Html.BeginForm())
{
    @Html.DropDownList("cidString", null, "类别", htmlAttributes: new { @class = "form-control col-md-4" })
    @Html.TextBox("searchString", null, htmlAttributes: new { @class = "form-control col-md-4" })
    <input type="submit" value="查找" class="form-control col-md-2"/>
}

    <br />


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.p_cg.cg_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_num)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_price)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.p_img)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.p_cg.cg_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_num)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.p_price)
            </td>
            <td>
                <img src="~/Img/@Html.DisplayFor(modelItem => item.p_img)" style="width:50px;height:auto" />
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.p_id }) |
                @Html.ActionLink("Details", "Details", new { id = item.p_id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.p_id })
            </td>
        </tr>
    }

</table>


